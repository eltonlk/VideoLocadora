<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.Actor" table="actors">
        <id name="actorId" column="id" type="Long">
            <generator class="sequence">
                <param name="sequence">actors_id_seq</param>
            </generator>
        </id>

        <property name="name" column="name" type="String"/>
    </class>

    <class name="model.City" table="cities">
        <id name="cityId" column="id" type="Long">
            <generator class="sequence">
                <param name="sequence">cities_id_seq</param>
            </generator>
        </id>

        <property name="name" column="name" type="String"/>

        <many-to-one name="state" class="State" column="state_id"/>
    </class>

    <class name="model.Country" table="countries">
        <id name="countryId" column="id" type="Long">
            <generator class="sequence">
                <param name="sequence">countries_id_seq</param>
            </generator>
        </id>

        <property name="name" column="name" type="String"/>
    </class>

    <class name="model.Genre" table="genres">
        <id name="genreId" column="id" type="Long">
            <generator class="sequence">
                <param name="sequence">genres_id_seq</param>
            </generator>
        </id>

        <property name="name" column="name" type="String"/>
    </class>

    <class name="model.Location" table="locations">
        <id name="locationId" column="id" type="Long">
            <generator class="native"/>
        </id>

        <set name="items" cascade="all">
            <key column="location_id"/>
            <one-to-many class="LocationItem"/>
        </set>

        <many-to-one name="person" class="Person" column="person_id"/>
    </class>

    <class name="model.LocationItem" table="location_items">
        <id name="locationItemId" column="id" type="Long">
            <generator class="native"/>
        </id>

        <many-to-one name="location" class="Location" column="location_id"/>
        <many-to-one name="media" class="Media" column="media_id"/>
    </class>

    <class name="model.Movie" table="movies">
        <id name="movieId" column="id" type="Long">
            <generator class="native"/>
        </id>

        <property name="title" column="title" type="String", unique="true", not-null="true"/>

        <property name="synopsis" column="synopsis" type="String"/>

        <set name="actors" table="movies_actors" inverse="false" lazy="true" fetch="select" cascade="all">
            <key>
                <column name="movie_id" not-null="true"/>
            </key>
            <many-to-many entity-name="model.Actor">
                <column name="actor_id" not-null="true"/>
            </many-to-many>
        </set>
    </class>

    <class name="model.State" table="states">
        <id name="stateId" column="id" type="Long">
            <generator class="sequence">
                <param name="sequence">states_id_seq</param>
            </generator>
        </id>

        <property name="name" column="name" type="String"/>

        <many-to-one name="country" class="Country" column="country_id"/>
    </class>
</hibernate-mapping>
